{
    "name": "cartalyst/data-grid-laravel",
    "description": "Laravel integration for the Cartalyst Data Grid 4.0 package.",
    "keywords": [
        "php",
        "cartalyst",
        "laravel",
        "data-grid",
        "data",
        "grid",
        "filter",
        "search",
        "pagination"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "cartalyst/data-grid": "^4.0",
        "illuminate/support": "^5.1"
    },
    "require-dev": {
        "cartalyst/attributes": "^2.0",
        "cartalyst/php-cs-fixer-config": "^1.0",
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Cartalyst\\DataGrid\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cartalyst\\DataGrid\\Laravel\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "component": "package",
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
